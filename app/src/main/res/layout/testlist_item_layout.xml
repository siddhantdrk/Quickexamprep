<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="@dimen/dp_10"
    android:layout_marginLeft="@dimen/dp_10"
    android:layout_marginEnd="@dimen/dp_10"
    android:layout_marginRight="@dimen/dp_10"
    android:layout_marginBottom="@dimen/dp_10">

    <RelativeLayout
        android:padding="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_test_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phase 1 01"
            android:textSize="18sp"
            android:textColor="@color/primary_color" />

        <ImageView
            android:id="@+id/iv_live_icon"
            android:layout_below="@+id/tv_test_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:src="@drawable/ic_live"/>

        <TextView
            android:layout_marginTop="@dimen/dp_5"
            android:id="@+id/tv_test_marks"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_live_icon"
            android:layout_below="@+id/tv_test_title"
            android:text="10 marks"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/black"
            android:layout_toEndOf="@+id/iv_live_icon"
            android:layout_marginStart="@dimen/dp_10" />

        <TextView
            android:id="@+id/tv_questions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_test_marks"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toRightOf="@+id/iv_live_icon"
            android:text="10 Questions"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/black"
            android:layout_toEndOf="@+id/iv_live_icon"
            android:layout_marginStart="@dimen/dp_10" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/mb_buy_now"
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:visibility="gone"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="@string/buy_now" />

        <com.google.android.material.button.MaterialButton
            android:layout_width="115dp"
            android:visibility="gone"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:id="@+id/mb_take_test"
            android:textColor="@color/primary_color"
            app:backgroundTint="@color/white"
            android:textSize="12sp"
            app:strokeWidth="1dp"
            app:strokeColor="@color/primary_color"
            android:layout_centerVertical="true"
            android:text="@string/take_test" />

    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>
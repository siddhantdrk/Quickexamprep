<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cv_question_option"
    android:layout_marginBottom="@dimen/dp_10"
    app:rippleColor="@android:color/transparent"
    app:strokeColor="@color/faint_primary_color"
    app:strokeWidth="2dp">

    <LinearLayout
        android:id="@+id/ll_option1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_question_name"
        android:padding="@dimen/dp_10"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_option_no"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/cicrlewithoutline"
            android:gravity="center"
            android:text="A"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_option"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_15"
            android:text="મુઝફ્ફર ખાનને"
            android:textColor="@color/faint_primary_color" />

        <ImageView
            android:id="@+id/iv_question_result"
            android:src="@drawable/ic_baseline_done_24"
            android:layout_width="0dp"
            android:layout_weight="0.1"
            android:visibility="gone"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>